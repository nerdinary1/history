      <level5 id="wxa_10011028_001">
        <front>
          <biblioData type="T">
            <title>
              <mainTitle>한성부의 하속들이 주구하고 징색하는 폐단을 범하지 않도록 신칙하다</mainTitle>
            </title>
            <docNo level="n" name="titleno">001</docNo>
            <date>
              <dateOccured date="1834-11-28L0" type="서기"/>
            </date>
            <source>
              <mainTitle type="태백산사고본">憲宗實錄 1책 1권</mainTitle>
