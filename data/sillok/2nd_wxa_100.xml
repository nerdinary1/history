      <level5 id="wxa_10012025_005">
        <front>
          <biblioData type="T">
            <title>
              <mainTitle>대행 대왕의 세실의 예를 정할 것을 아뢰는 영돈녕 조만영의 상소</mainTitle>
            </title>
            <docNo level="n" name="titleno">005</docNo>
            <date>
              <dateOccured date="1834-12-25L0" type="서기"/>
            </date>
            <source>
              <mainTitle type="태백산사고본">憲宗實錄 1책 1권</mainTitle>
              <page begin="3장 B면"/>
            </source>
