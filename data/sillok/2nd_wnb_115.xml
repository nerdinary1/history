      <level5 id="wnb_11506001_002">
        <front>
          <biblioData type="T">
            <title>
              <mainTitle>대제학 이이에게 《강목》의 강론을 고문할 신하를 선발하게 하다</mainTitle>
            </title>
            <docNo level="n" name="titleno">002</docNo>
            <date>
              <dateOccured date="1582-06-01L0" type="서기"/>
            </date>
            <source>
