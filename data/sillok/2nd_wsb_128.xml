      <level5 id="wsb_12810015_001">
        <front>
          <biblioData type="T">
            <title>
              <mainTitle>우의정 이세백이 병을 아뢰고 침구할 휴가를 원하다</mainTitle>
            </title>
            <docNo level="n" name="titleno">001</docNo>
            <date>
              <dateOccured date="1702-10-15L0" type="서기"/>
            </date>
            <source>
              <mainTitle type="태백산사고본">肅宗實錄補闕正誤 43책 37권</mainTitle>
              <page begin="3장 A면"/>
            </source>
