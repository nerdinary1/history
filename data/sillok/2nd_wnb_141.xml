          <biblioData type="T">
            <title>
              <mainTitle>김대래를 직제학으로 삼다</mainTitle>
            </title>
            <docNo level="n" name="titleno">002</docNo>
            <date>
              <dateOccured date="1608-02-01L0" type="서기"/>
            </date>
            <source>
              <mainTitle type="태백산사고본">宣祖修正實錄 8책 42권</mainTitle>
              <page begin="3장 B면"/>
            </source>
            <source>
              <mainTitle type="국편영인본">宣祖修正實錄 25책</mainTitle>
