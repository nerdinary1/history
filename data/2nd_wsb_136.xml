      <level5 id="wsb_13607116_001">
        <front>
          <biblioData type="T">
            <title>
              <mainTitle>판부사 윤증을 돈유하자, 윤증이 서계를 올려 향유가 상소한 일을 논하다</mainTitle>
            </title>
            <docNo level="n" name="titleno">001</docNo>
            <date>
              <dateOccured date="1710-07-16L1" type="서기"/>
            </date>
            <source>
              <mainTitle type="태백산사고본">肅宗實錄補闕正誤 56책 49권</mainTitle>
              <page begin="1장 B면"/>
            </source>
