        <front>
          <biblioData type="T">
            <title>
              <mainTitle>정언 황계하가 최중태의 계주를 정지하다</mainTitle>
            </title>
            <docNo level="n" name="titleno">001</docNo>
            <date>
              <dateOccured date="1708-01-27L0" type="서기"/>
            </date>
            <source>
              <mainTitle type="태백산사고본">肅宗實錄補闕正誤 53책 46권</mainTitle>
              <page begin="1장 A면"/>
            </source>
            <source>
