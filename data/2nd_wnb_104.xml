      <level5 id="wnb_10407001_001">
        <front>
          <biblioData type="T">
            <title>
              <mainTitle>백인걸이 벼슬을 그만두고 파주로 돌아가다</mainTitle>
            </title>
            <docNo level="n" name="titleno">001</docNo>
            <date>
              <dateOccured date="1571-07-01L0" type="서기"/>
            </date>
            <source>
              <mainTitle type="태백산사고본">宣祖修正實錄 1책 5권</mainTitle>
              <page begin="2장 A면"/>
            </source>
            <source>
              <mainTitle type="국편영인본">宣祖修正實錄 25책</mainTitle>
              <page begin="428면"/>
