      <level5 id="wnb_10408001_003">
        <front>
          <biblioData type="T">
            <title>
              <mainTitle>중종의 빈 박씨를 개장하다</mainTitle>
            </title>
            <docNo level="n" name="titleno">003</docNo>
            <date>
              <dateOccured date="1571-08-01L0" type="서기"/>
            </date>
            <source>
              <mainTitle type="태백산사고본">宣祖修正實錄 1책 5권</mainTitle>
              <page begin="3장 B면"/>
            </source>
